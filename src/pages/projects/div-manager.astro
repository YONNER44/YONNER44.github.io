---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { Image } from "astro:assets";
import logoDiv from "@assets/logodiv.png";

// Importa tus imágenes
import img1 from "@assets/dsx/img1.png";
import img2 from "@assets/dsx/img2.png";
import img3 from "@assets/dsx/img3.png";
import img4 from "@assets/dsx/img4.png";
import Carrousel from "@components/Carrousel.tsx";

const images = [img1, img2, img3, img4];
---

<PageLayout
  title="Div-manager"
  description="Sistema de gestión de tareas y proyectos para equipos de desarrollo"
>
  <Container size="2xl">
    <div class="animate max-w-5xl mx-auto py-8 mt-16">
      <!-- Card Principal del Proyecto -->
      <div class="bg-white dark:bg-[rgb(var(--gray-999))] rounded-3xl p-4 sm:p-8 md:p-12 shadow-2xl border dark:border-[rgb(var(--gray-800))]">
        <!-- Header con botón volver -->
        <div class="relative mb-8 md:mb-12">
          <a
            href="/projects"
            class="md:absolute static top-0 left-0 inline-flex items-center gap-2 px-4 py-2 md:px-5 md:py-2.5 bg-black dark:bg-white rounded-lg hover:shadow-lg hover:scale-105 hover:-translate-x-1 transition-all duration-300 z-10 font-semibold no-underline text-white dark:text-black group mb-6 md:mb-0"
          >
            <svg
              class="w-5 h-5 stroke-[2.5] group-hover:-translate-x-1 transition-transform duration-300"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Volver
          </a>
          <div class="text-center">
            <!-- Logo del Proyecto -->
            <div class="flex justify-center mb-6">
                <div class="w-24 h-24 md:w-32 md:h-32 bg-[rgb(var(--accent-light)/0.1)] rounded-3xl flex items-center justify-center shadow-lg p-3 md:p-4">
                  <Image src={logoDiv} alt="Div-manager Logo" class="w-full h-full object-contain"/>
                </div>
            </div>
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black mb-3 md:mb-4 text-[rgb(var(--gray-dark))] dark:text-white tracking-tight drop-shadow-lg">
              Div-manager
            </h1>
            <p class="text-lg md:text-xl font-medium text-[rgb(var(--gray-dark))] mb-4">
              Sistema de gestión de tareas y proyectos para equipos de
              desarrollo
            </p>
            <div
              class="flex items-center justify-center gap-2 text-sm text-[rgb(var(--gray))]"
            >
              <svg
                class="w-5 h-5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              <span>Junio 2024 - Diciembre 2024</span>
            </div>
          </div>
        </div>

        <!-- Contenido Principal en Cards -->
        <div class="space-y-6">
          <!-- Descripción -->
          <section class="bg-[rgb(var(--gray-light))] dark:bg-[rgb(var(--gray-800))] rounded-2xl p-6 md:p-8 shadow-md">
            <h2 class="text-2xl font-bold text-[rgb(var(--gray-dark))] dark:text-white mb-4">
              Descripción del Proyecto
            </h2>
            <p class="leading-relaxed text-lg text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]">
              <strong>Div-manager</strong> es un sistema basado en la gestión de tareas
              y proyectos que lleva un control de tus equipos, proyectos y tareas
              dentro de tu empresa de forma eficaz.
            </p>
          </section>

          <!-- Asociación -->
          <section class="bg-[rgb(var(--accent-light)/0.15)] dark:bg-[rgb(var(--accent-dark)/0.2)] rounded-2xl p-6 md:p-8 shadow-md">
            <div class="flex items-center gap-3 mb-3">
              <svg
                class="w-6 h-6 text-[rgb(var(--accent-dark))] dark:text-[rgb(var(--accent-light))]"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                ></path>
              </svg>
              <h3 class="text-xl font-bold text-[rgb(var(--gray-dark))] dark:text-white">
                Asociación
              </h3>
            </div>
            <p class="leading-relaxed text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]">
              Proyecto desarrollado en colaboración con <strong
                >Disruptive Information Technologies</strong>
            </p>
          </section>

          <!-- Características Principales -->
          <section class="bg-[rgb(var(--gray-light))] dark:bg-[rgb(var(--gray-800))] rounded-2xl p-6 md:p-8 shadow-md">
            <h2 class="text-2xl font-bold text-[rgb(var(--gray-dark))] dark:text-white mb-5">
              Características Principales
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="flex gap-3">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] flex-shrink-0 mt-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1 text-[rgb(var(--gray-dark))] dark:text-white">Gestión de Proyectos</h3>
                  <p class="text-sm text-[rgb(var(--gray-dark))]">
                    Sistema completo para crear, organizar y supervisar
                    proyectos
                  </p>
                </div>
              </div>
              <div class="flex gap-3">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] flex-shrink-0 mt-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1 text-[rgb(var(--gray-dark))] dark:text-white">Control de Tareas</h3>
                  <p class="text-sm text-[rgb(var(--gray-dark))]">
                    Asignación y seguimiento detallado de tareas del equipo
                  </p>
                </div>
              </div>
              <div class="flex gap-3">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] flex-shrink-0 mt-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1 text-[rgb(var(--gray-dark))] dark:text-white">Dashboard en Tiempo Real</h3>
                  <p class="text-sm text-[rgb(var(--gray-dark))]">
                    Visualización instantánea del estado de proyectos y tareas
                  </p>
                </div>
              </div>
              <div class="flex gap-3">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] flex-shrink-0 mt-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1 text-[rgb(var(--gray-dark))] dark:text-white">Gestión de Equipos</h3>
                  <p class="text-sm text-[rgb(var(--gray-dark))]">
                    Administración de miembros del equipo y sus roles
                  </p>
                </div>
              </div>
              <div class="flex gap-3">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] flex-shrink-0 mt-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1 text-[rgb(var(--gray-dark))] dark:text-white">Sistema de Prioridades</h3>
                  <p class="text-sm text-[rgb(var(--gray-dark))]">
                    Clasificación y organización de tareas por importancia
                  </p>
                </div>
              </div>
              <div class="flex gap-3">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] flex-shrink-0 mt-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1 text-[rgb(var(--gray-dark))] dark:text-white">Reportes y Métricas</h3>
                  <p class="text-sm text-[rgb(var(--gray-dark))]">
                    Análisis de productividad y rendimiento del equipo
                  </p>
                </div>
              </div>
              <div class="flex gap-3">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] flex-shrink-0 mt-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1 text-[rgb(var(--gray-dark))] dark:text-white">Colaboración</h3>
                  <p class="text-sm text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]">
                    Herramientas de comunicación y colaboración integradas
                  </p>
                </div>
              </div>
            </div>
          </section>

          <!-- Stack Tecnológico -->
          <section class="bg-[rgb(var(--gray-light))] dark:bg-[rgb(var(--gray-800))] rounded-2xl p-6 md:p-8 shadow-md">
            <h2 class="text-2xl font-bold text-[rgb(var(--gray-dark))] dark:text-white mb-5">
              Stack Tecnológico
            </h2>
            <div class="flex flex-wrap gap-3">
              <span
                class="px-4 py-2 text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))] text-sm font-medium"
                >React</span
              >
              <span
                class="px-4 py-2 text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))] rounded-full text-sm font-medium"
                >TypeScript</span
              >
              <span
                class="px-4 py-2 text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))] rounded-full text-sm font-medium"
                >Tailwind CSS</span
              >
              <span
                class="px-4 py-2 text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))] rounded-full text-sm font-medium"
                >Node.js</span
              >
              <span
                class="px-4 py-2 text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))] rounded-full text-sm font-medium"
                >Express.js</span
              >
              <span
                class="px-4 py-2 text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))] rounded-full text-sm font-medium"
                >MongoDB</span
              >
            </div>
          </section>

          <!-- Logros -->
          <section class="bg-[rgb(var(--gray-light))] dark:bg-[rgb(var(--gray-800))] rounded-2xl p-6 md:p-8 shadow-md">
            <h2 class="text-2xl font-bold text-[rgb(var(--gray-dark))] dark:text-white mb-5">
              Logros Destacados
            </h2>
            <ul class="space-y-3">
              <li class="flex gap-3 items-start">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] dark:text-[rgb(var(--accent-light))] flex-shrink-0 mt-0.5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="leading-relaxed text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]"
                  >Arquitectura escalable para empresas de diferentes tamaños</span
                >
              </li>
              <li class="flex gap-3 items-start">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] dark:text-[rgb(var(--accent-light))] flex-shrink-0 mt-0.5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="leading-relaxed text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]"
                  >Interfaz intuitiva y fácil de usar</span
                >
              </li>
              <li class="flex gap-3 items-start">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] dark:text-[rgb(var(--accent-light))] flex-shrink-0 mt-0.5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="leading-relaxed text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]"
                  >Sistema robusto de permisos y roles</span
                >
              </li>
              <li class="flex gap-3 items-start">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] dark:text-[rgb(var(--accent-light))] flex-shrink-0 mt-0.5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="leading-relaxed text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]"
                  >Integración con herramientas de terceros</span
                >
              </li>
              <li class="flex gap-3 items-start">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] dark:text-[rgb(var(--accent-light))] flex-shrink-0 mt-0.5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="leading-relaxed text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]"
                  >Panel de métricas detallado para análisis de productividad</span
                >
              </li>
              <li class="flex gap-3 items-start">
                <svg
                  class="w-6 h-6 text-[rgb(var(--accent-dark))] dark:text-[rgb(var(--accent-light))] flex-shrink-0 mt-0.5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="leading-relaxed text-[rgb(var(--gray-dark))] dark:text-[rgb(var(--gray-300))]"
                  >Diseño responsivo optimizado para escritorio y móvil</span
                >
              </li>
            </ul>
          </section>

          <!-- Galería de Imágenes -->
          <section class="bg-[rgb(var(--gray-light))] dark:bg-[rgb(var(--gray-800))] rounded-2xl p-6 md:p-8 shadow-md">
            <h2 class="text-2xl font-bold text-[rgb(var(--gray-dark))] dark:text-white mb-5">
              Galería del Proyecto
            </h2>
            <Carrousel images={images} client:load />
          </section>
        </div>
      </div>
    </div>
  </Container>
</PageLayout>
